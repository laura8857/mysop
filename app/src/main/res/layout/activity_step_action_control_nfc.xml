<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ncu.efpg.mysop.StepActionControlNFC"
    android:background="#ffffffff"
    android:id="@+id/nnn">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Step"
        android:id="@+id/AC_NFC_textView1"
        android:textColor="#ff000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1"
        android:id="@+id/AC_NFC_textView2"
        android:textColor="#ff000000"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/AC_NFC_textView1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="啟動方法"
        android:id="@+id/AC_NFC_textView3"
        android:layout_below="@+id/AC_NFC_textView1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp"
        android:textColor="#ff1b1b1b" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="NFC啟動"
        android:id="@+id/AC_NFC_textView4"
        android:textColor="#7e7e7e"
        android:layout_below="@+id/AC_NFC_textView3"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="啟動訊息"
        android:id="@+id/AC_NFC_textView5"
        android:textColor="#ff1b1b1b"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/AC_NFC_textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="請使用NFC"
        android:id="@+id/AC_NFC_textView6"
        android:textColor="#7e7e7e"
        android:layout_below="@+id/AC_NFC_textView5"
        android:layout_alignParentStart="true" />

</RelativeLayout>
